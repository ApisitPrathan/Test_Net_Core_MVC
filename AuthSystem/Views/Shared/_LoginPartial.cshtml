@using Microsoft.AspNetCore.Identity
@using InterviewTest_Clicknext.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@* <ul class="navbar-nav"> *@
@if (SignInManager.IsSignedIn(User))
{
    <div class="flex-list ">
        <ul class="navbar-nav ">
            <li class="nav-item menu_item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Deposit">Deposit</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Transfer">Transfer</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Withdrawal">Withdrawal</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="TransferTransaction">Transfer Transaction</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="ReceiveTransaction">Receive Transaction</a>
            </li>
            
        </ul>
    </div>
    <div class="nav-right">
        <ul class="navbar-nav">
            <li class="nav-item">
                @* <a id="manage" class="nav-link text-dark bg-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> *@
                <span class="nav-link text-dark ">Hello @UserManager.GetUserName(User)!</span>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline bg-danger" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
@* </ul> *@
